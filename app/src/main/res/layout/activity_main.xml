<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.antares.dsmith.cclock.MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingTop="@dimen/activity_vertical_wide_margin"
        android:weightSum="1">
        <EditText android:id="@+id/location_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="@string/location_label"
            android:layout_weight="0.90"
            android:inputType="none" />
        <Button android:id="@+id/set_location"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:text="@string/set_button"
            android:onClick="SetLocation"
            android:layout_gravity="fill_horizontal" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:weightSum="1">
        <EditText android:id="@+id/lat_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/lat_value"
            android:inputType="none" />
        <EditText android:id="@+id/long_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/long_value"
            android:inputType="none"
            android:gravity="right" />

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingTop="@dimen/activity_vertical_wide_margin"
        android:orientation="horizontal"
        android:weightSum="1">
        <EditText android:id="@+id/time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="@string/time_label"
            android:layout_weight="0.90"
            android:inputType="none" />
        <Button android:id="@+id/set_time"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:text="@string/set_button"
            android:onClick="SetTime"
            android:layout_gravity="fill_horizontal" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText android:id="@+id/date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="@string/date_value" />
        <EditText android:id="@+id/time_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:hint="@string/time_value" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_wide_margin"
        android:orientation="horizontal">
        <EditText android:id="@+id/UTC_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/UTC_label" />
        <EditText android:id="@+id/UTC_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="@string/UTC_value"
            android:inputType="none" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText android:id="@+id/sol_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/sol_time_label" />
        <EditText android:id="@+id/sol_time_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="@string/sol_time_value" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText android:id="@+id/sid_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/sid_time_label" />
        <EditText android:id="@+id/sid_time_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="@string/sid_time_value" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right"
        android:layout_gravity="bottom|right">

        <Button
            android:text="Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UpdateButton"
            android:layout_gravity="bottom|end"
            android:onClick="Refresh"
            android:gravity="center_vertical|end" />
    </LinearLayout>

</LinearLayout>
